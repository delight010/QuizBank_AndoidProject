<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    tools:context=".Activity.MyPageStudentActivity">

    <TextView
        android:id="@+id/tv_MyPage_student_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="***님의 마이페이지"
        android:textSize="15dp"
        android:textColor="#000000"
        android:background="#ffffff"
        android:layout_marginTop="15dp"
        android:padding="15dp"
        />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:padding="15dp"
            android:text="회원 정보"
            android:textColor="#000000"
            android:layout_marginTop="15dp"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/tv_Mypage_student_AccountInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:padding="15dp"
            android:text="학생"
            android:textAlignment="center"
            android:textColor="#4E4E4E"
            android:layout_marginTop="15dp"
            android:textSize="15dp"
            android:gravity="center_horizontal" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_MyPage_student_DivisionEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="소속 등록 / 변경"
        android:textSize="15dp"
        android:textColor="#000000"
        android:background="#ffffff"
        android:layout_marginTop="2dp"
        android:padding="15dp"
        />
    <TextView
        android:id="@+id/tv_MyPage_student_privacy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:padding="15dp"
        android:text="개인정보정책"
        android:textColor="#000000"
        android:layout_marginTop="15dp"
        android:textSize="15dp" />
    <TextView
        android:id="@+id/tv_MyPage_student_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="버전 정보"
        android:textSize="15dp"
        android:textColor="#000000"
        android:background="#ffffff"
        android:layout_marginTop="2dp"
        android:padding="15dp"
        />

    <TextView
        android:id="@+id/tv_Mypage_student_Logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:padding="15dp"
        android:text="로그아웃"
        android:textColor="#000000"
        android:layout_marginTop="15dp"
        android:textSize="15dp" />
    <TextView
        android:id="@+id/tv_MyPage_student_DeleteMyAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원탈퇴"
        android:textSize="15dp"
        android:textColor="#000000"
        android:background="#ffffff"
        android:layout_marginTop="2dp"
        android:padding="15dp"
        />

</LinearLayout>